{
    "compilerOptions": {
      "jsx": "react",
      "lib": ["dom", "es2020.intl"],
      "experimentalDecorators": true,
      "esModuleInterop": true,
      "baseUrl": ".",
      "declaration": true,
      "isolatedModules": true,
      "outDir": "./dist",
      "paths": {
        "@src": [
          "./src/*"
        ],
      }
    },
    "include": [
      "src/**/*"
    ],
    "exclude": [
      "node_modules",
      "test",
    ]
}
